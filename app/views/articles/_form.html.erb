<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |error|%>
      <p> <%= error %> </p>
  <% end %>
<% end %>

<%= form_with(model: @article, local: true, data: { turbo: false } ) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <%= f.submit %>

<% end %>