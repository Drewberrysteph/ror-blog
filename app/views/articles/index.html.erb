<table border="1">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Action</th>
  </tr>
  <% @articles.each do |article| %>
      <tr>
        <td> <%= article.id %> </td>
        <td> <%= article.title %> </td>
        <td> <%= article.description %> </td>
        <td style="display: flex"> 
            <span style="margin-right: 5px"><%= link_to 'Show', article_path(article.id) %></span>
            <span style="margin-right: 5px"><%= link_to 'Edit', edit_article_path(article.id) %></span>
            <%= button_to "Delete my account", article_path(article.id), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %>
         </td>
      </tr>
  <% end %>
</table>

<%= link_to 'Create', new_article_path %>